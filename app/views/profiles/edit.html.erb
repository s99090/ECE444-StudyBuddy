<h1>Edit Profile</h1>

<%= form_with model: [current_user, @profile], local: true do |form| %>
  
  <p>
    <%= image_tag @profile.avatar, :style => "height: 60px; weight: 60px;" %><br /><br>
    <%= form.file_field :avatar %>
  </p>

  <p>
    <%= form.label :last_name %><br>
    <%= form.text_field :lname %>
  </p>

  <p>
    <%= form.label :first_name %><br>
    <%= form.text_field :fname %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', user_profile_path %>
