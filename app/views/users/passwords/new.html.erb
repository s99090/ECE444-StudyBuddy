<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'layouts/error_messages', object: resource %>

  <div class ="ui container" style="margin-top: 20px">
  <div class ="ui form">
  <h2 class="ui dividing header">Forgot your password?</h2>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class=>"ui primary button"%>
  </div>
  <div class = "ui buttons" style="margin-top: 10px;">
  <%= render "users/shared/links" %>
  </div>
  </div>
  </div>
<% end %>
