<%= form_with model: [@group, @event], :class => "ui form", local: true do |form| %>

  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :event_type %><br>
    <%= form.text_field :event_type %>
  </div>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    </div>

  <div class="field">
    <%= form.label :content %><br>
    <%= form.text_area :content %>
    </div>

  <div class="field">
    <%= form.label :date_time %><br>
    <%= form.datetime_field :datetime %>
    </div>

  <div class="field">
    <%= form.submit :class=>'ui primary button'%>
    </div>
<% end %>
