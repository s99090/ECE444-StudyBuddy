<%= form_with scope: :buddy, url: buddies_path, local: true do |form| %>


  <p>
    <%= form.label :username %><br>
    <%= form.text_field :username, :value => current_user.email %>
  </p>

  <p>
    <%= form.label :first_name %><br>
    <%= form.text_field :fname %>
  </p>

  <p>
    <%= form.label :last_name %><br>
    <%= form.text_field :lname %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>


  <p>
    <%= form.label :hourly_rate %><br>
    <%= form.text_field :hourly_rate %>
  </p>

  <p>
    <%= form.label :courses %><br>
    <%= form.text_field :courses %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

