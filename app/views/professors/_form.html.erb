<%= form_with model: @professor, :class => "ui form", local: true do |form| %>
  <div class="ui container" style="margin-top: 50px; margin-bottom: 50px; padding: 0px">
    <h4 class="ui dividing header">Professor Information</h4>
      <div class = "field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class = "ui field">
      <%= form.label :image %>
      <%= form.file_field :avatar %>
    </div>
  
      <div class = "field">
        <%= form.label :department %>
        <%= form.text_field :department %>
      </div>
  
  
      <div class = "field">
        <%= form.label :position %>
        <%= form.text_field :position %>
      </div>
  
      <div class = "field">
        <%= form.label :about %>
        <%= form.text_area :about%>
      </div>

      <div class = "field">
      <%= form.label :rating %>
      <%= form.text_field :rating%>
    </div>
  
      <div class = "buttons">
        <%= form.submit :class=>'ui primary button' %>
        <%= link_to 'Back', professors_path, :class=>'ui secondary button' %>
       </div>
      </div>
    <% end %>
  
  