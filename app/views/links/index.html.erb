
<div class="ui container" style="margin-left: 100px; margin-top: 50px">
<h1 class="ui dividing header">Listing Available Links for <%=@course.course_code%></h1>

<div class="ui borderless compact menu">
  <%= link_to 'Home', course_path(@course), :class=>"item"%>
  <%= link_to 'Notes', course_notes_path(@course), :class=>"item"%>
  <%= link_to 'Links', course_links_path(@course, @link), :class=>"active item"%>
  <%= link_to 'Discussions', course_discussions_path(@course, @discussion), :class=>"item" %>
  <%= @course.groups%>
</div>

<div class="ui relaxed divided list">
<% @links.each do |link| %>
  <div class="item">
    <i class="large github middle aligned icon"></i>
    <div class="content">
      <div class="header"><%= link.link_name %></div>
      <div class="description"><%= link_to link.link_url, link.link_url, :target => "_blank" %></div>
      <div class="description"><%= link.created_at %></div>
    </div>
    <div class="extra content" style="margin-top: 10px;">
      <div class="ui labeled button" tabindex="0">
    <%= link_to course_link_addUpvote_path(@course,link), method: :patch do %>
      <div class="ui red button">
      <i class="hand point up icon"></i> Upvotes
    </div>
    <a class="ui basic red left pointing label">
    <%= link.upvotes.length %>
    </a>
    <% end %>
    </div>
    <div class="ui labeled button" tabindex="0">
    <%= link_to course_link_addDownvote_path(@course, link), method: :patch do %>
      <div class="ui basic blue button">
      <i class="hand point down icon"></i> Downvotes
    </div>
    <a class="ui basic left pointing blue label">
      <%= link.downvotes.length%>
    </a>
    <% end %>
    </div>
    </div>
  </div>
  <% end %>
</div>

<div style = "margin-top : 50px;">
<%= link_to 'Add New Link', new_course_link_path, :class => 'ui primary button'%>
<%= link_to courses_path do %>
  <div class = "ui secondary button">
  Back
  </div>
<% end %>
<%= link_to controller: 'welcome' do %>
  <div class = "ui secondary button">
  Main Page
  </div>
  <% end %>
</div>
</div>
</div>

