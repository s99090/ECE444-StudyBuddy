<h1>Listing Available Courses</h1>
<%= link_to 'New Course', new_course_path %>

<table>
  <tr>
    <th>CourseID</th>
    <th>Name</th>
    <th>Subject</th>
    <th>Term</th>
    <th>Course Code</th>
    <th>Students</th>
    <th>Useful Notes</th>
    <th>Useful Links</th>
    <th>Discussion Forum</th>
    <th>Course Groups</th>
  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.course_id %></td>
      <td><%= course.name %></td>
      <td><%= course.subject %></td>
      <td><%= course.term %></td>
      <td><%= course.course_code %></td>
      <td><%= course.students %></td>
      <td><%= course.notes %></td>
      <td><%= course.links %></td>
      <td><%= course.discussions %></td>
      <td><%= course.groups %></td>
      <td><%= link_to 'Show', course_path(course) %></td>
    </tr>
  <% end %>
</table>

